.mypage
  .mypage__main
    .contents
      .main
        = link_to '#', class: "fixed_btn" do
          出品
          %br/
          = fa_icon 'camera', class: 'icon'
        %h2 登録クレジットカード情報
        .main-middle
          %p.one
            カード番号
            %br
            = "**** **** **** " + @default_card_information.last4
            %br
            有効期限
            %br
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
            %br
            = image_tag "credit-logo.svg", height: '20', width: '26'
        %hr/
        %p.main-bottom
          = link_to '#' do
            支払い方法について
            %span
              = fa_icon 'chevron-right', class: 'icon'
  =render partial: "users/side_menu"