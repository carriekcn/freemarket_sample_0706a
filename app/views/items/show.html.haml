.items-detail-wrap
  .item-name
    -# インスタンス変数に変換
    %h1 アディダス Tシャツ他 

  .item-detail-content
    .item-detail-content__images
      .image-detail
        -# 商品に紐づいた画像の読み込む記述に変換
        = image_tag 'adidas-tops-image.jpg', width: '300', height: '300'
      .image-row
        -# eachメソッドで商品に紐づいた画像の読み込む記述挿入
        .image-mini
          = image_tag 'adidas-tops-image.jpg', width: '60', height: '60', class:'mini-image'
          = image_tag 'adidas-tops-image2.jpg', width: '60', height: '60', class:'mini-image'
          = image_tag 'adidas-tops-image.jpg', width: '60', height: '60', class:'mini-image'
          = image_tag 'adidas-tops-image2.jpg', width: '60', height: '60', class:'mini-image'
          = image_tag 'adidas-tops-image.jpg', width: '60', height: '60', class:'mini-image'
          = image_tag 'adidas-tops-image2.jpg', width: '60', height: '60', class:'mini-image'
          = image_tag 'adidas-tops-image.jpg', width: '60', height: '60', class:'mini-image'
          = image_tag 'adidas-tops-image2.jpg', width: '60', height: '60', class:'mini-image'
          = image_tag 'adidas-tops-image.jpg', width: '60', height: '60', class:'mini-image'
          = image_tag 'adidas-tops-image2.jpg', width: '60', height: '60', class:'mini-image'

    %table.item-detail-content__table
      %tr
        %th 出品者
        %td
          =link_to "#" do
            -# インスタンス変数に変換
            %p あきさん
          .rate
            .rate-good
              %i.fa.fa-star
              20
            .rate-normal
              %i.fa.fa-star-half
              10
            .rate-bad
              %i.fa.fa-star
              0
      %tr
        %th カテゴリー
        %td
          =link_to '#' do
            %span メンズ
            %br
            %i.fa.fa-chevron-right
            %span トップス
            %br
            %i.fa.fa-chevron-right
            %span Tシャツ/カットソー
      %tr
        %th ブランド
        %td
          =link_to '#' do
            %p アディダス
      %tr
        %th サイズ
        -# インスタンス変数に変換
        %td L
      %tr
        %th 商品の状態
        -# インスタンス変数に変換
        %td やや傷や汚れあり
      %tr
        %th 配送料の負担
        -# インスタンス変数に変換
        %td 送料込み(出品者負担)
      %tr
        %th 配送の方法
        -# インスタンス変数に変換
        %td 未定
      %tr
        %th 配送元地域
        %td
          =link_to '#' do
            -# インスタンス変数に変換
            %p 東京
      %tr
        %th 発送日の目安
        -# インスタンス変数に変換
        %td 2-3日で発送


  .item-detail-price
    %span.item-detail-price__taxed-price
      -# ¥後改行して価格をインスタンス変数で表示
      ¥ 2,650
    %span.item-detail-price__tax
      (税込)
    %span.item-detail-price__sum
      送料込み

  -#  ログイン周りのバリデーション完成後反映 *インデント数注意
