.breadcrumb
  - case params.values_at :controller, :action

  - when ['items', 'new']
    - breadcrumb :exhibit 

  - when ['users', 'show']
    - breadcrumb :mypage

  - when ['cards', 'index']
    - breadcrumb :card

  - when ['cards', 'new']
    - breadcrumb :card_pay

  - when ['logout', 'index']
    - breadcrumb :logout

  - when ['profile', 'index']
    - breadcrumb :profile

  - when ['users', 'new']
    - breadcrumb :detail

  %span.breadcrumb__separator
    = breadcrumbs separator: " &rsaquo; "