= render 'layouts/breadcrumbs'
.mypage
  .mypage__identification
    .mypage__identification__main
      %h2 本人情報の登録
      .mypage__identification__main__content
        .mypage__identification__main__content__info
          .mypage__identification__main__content__info__text
            お客さまの本人情報をご登録ください。<br>
            登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
          .mypage__identification__main__content__info__link
            =link_to "#", class: 'mypage__identification__main__content__info__link__text' do
              本人確認書類のアップロードについて
              %i.fa.fa-angle-right
        .mypage__identification__main__content__name
          %label お名前<br>
          %p 栗村 佑紀
        .mypage__identification__main__content__kana
          %label お名前カナ<br>
          %p クリムラ ユウキ
        .mypage__identification__main__content__birth_day
          %label 生年月日<br>
          %p 1987/12/13
        .mypage__identification__main__content__fix
          %label 郵便番号
          %span 任意
          = text_area_tag :text, '', class: 'mypage__identification__main__content__fix__input', placeholder: '例）1234567'
        .mypage__identification__main__content__prefectures
          %label 都道府県
          %span 任意
          .mypage__identification__main__content__prefectures__select
            %i.fa.fa-angle-down.fa-2x
            -# サーバーサイド実装時インスタンス変数に変更
            = form_for :user, html: { class: "select" } do |f|
              = f.collection_select :area, Prefecture.all, :id, :name, {prompt: "--"}
        .mypage__identification__main__content__city
          %label 市区町村
          %span 任意
          = text_area_tag :text, '', class: 'mypage__identification__main__content__city__input', placeholder: '例) 横浜市緑区'
        .mypage__identification__main__content__address
          %label 番地 
          %span 任意
          = text_area_tag :text, '', class: 'mypage__identification__main__content__address__input', placeholder: '例) 青山1−1−1'
        .mypage__identification__main__content__buildding
          %label 建物名 
          %span 任意
          = text_area_tag :text, '', class: 'mypage__identification__main__content__buildding__input', placeholder: '例) 柳ビル103'
        .mypage__identification__main__content__btn
          %button 登録する
        .mypage__identification__main__content__description
          =link_to "#", class: "mypage__identification__main__content__description__text" do
            本人情報の登録について
            %i.fa.fa-angle-right
  =render partial: "users/side_menu"