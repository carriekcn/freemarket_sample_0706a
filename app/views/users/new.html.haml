        .mypage__identification__main__content__city
          %label 市区町村
          %span 任意
          = text_area_tag :text, '', class: 'mypage__identification__main__content__city__input', placeholder: '例) 横浜市緑区'
        .mypage__identification__main__content__address
          %label 番地 
          %span 任意
          = text_area_tag :text, '', class: 'mypage__identification__main__content__address__input', placeholder: '例) 青山1−1−1'
        .mypage__identification__main__content__buildding
          %label 建物名 
          %span 任意
          = text_area_tag :text, '', class: 'mypage__identification__main__content__buildding__input', placeholder: '例) 柳ビル103'
        .mypage__identification__main__content__btn
          %button 登録する
        .mypage__identification__main__content__description
          =link_to "#", class: "mypage__identification__main__content__description__text" do
            本人情報の登録について
            %i.fa.fa-angle-right
